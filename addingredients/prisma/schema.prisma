generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Ingredient {
  id        String   @id @default(uuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ImageUrl {
  id                    String   @id @default(uuid())
  url                   String
  sortedIngredientsList String
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}
